a = ["Help me", "I'm here", "You lose"]
key = "123"
k = 1
print("Вы хотите увидеть: ")
print("1)Все элементы массива")
print("2)Определенный элементы массива")
ch = int(input)


if ch == 1:
    password = input("Ведите пароль: ")
    while password != key:
        if k == 3:
            break
        else:
            password = input("Ведите пароль: ")
            k += 1
    if password == key:
        for i in range(3):
            print(a[i])
elif ch == 2:
    choise = int(input("Введите индекс: "))
    password = input("Ведите пароль: ")

    while password != key:
        if k == 3:
            break
        else:
            password = input("Ведите пароль: ")
            k += 1
    if password == key:
        if choise == 1:
            print(a[0])
        elif choise == 2:
            print(a[1])
        elif choise == 3:
            print(a[2])


s = 1
while s == 1:
    if password == key:
        print("Выберите подходящий пункт меню: ")
        print("1)Добавить новый элемент в массив")
        print("2)Сменить пароль")
        print("3)Выход")
        menu = int(input)
            if menu == 1:
                a.append(input("Введите содержимое нового элемента массива: "))
            elif menu == 2:
                key = newkey = input("Введите новый пароль: ")
            print("Вот все ваши данные на этот момент: ")
            print("Массив: ", a)
            print("Пароль: ", key)
            print("Кол-во попыток при входе: ", k)

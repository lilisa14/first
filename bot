a = ["Help me", "I'm here", "You lose"]
key = "123"
k = 1
ch = int(input("Вы хотите увидеть: 1)Все элементы массива 2)Определенный элементы массива"))


if ch == 1:
    password = input("Ведите пароль: ")
    while password != key:
        if k == 3:
            break
        else:
            password = input("Ведите пароль: ")
            k += 1
    if password == key:
        for i in range(3):
            print(a[i])
elif ch == 2:
    choise = int(input("Введите индекс: "))
    password = input("Ведите пароль: ")

    while password != key:
        if k == 3:
            break
        else:
            password = input("Ведите пароль: ")
            k += 1
    if password == key:
        if choise == 1:
            print(a[0])
        elif choise == 2:
            print(a[1])
        elif choise == 3:
            print(a[2])


s = 1
while s == 1:
    if password == key:
        menu = int(input("Выберите подходящий пункт меню: 1)Добавить новый элемент в массив 2)Сменить пароль 3)Выход"))
            if menu == 1:
                a.append(input("Введите содержимое нового элемента массива: "))
            elif menu == 2:
                key = newkey = input("Введите новый пароль: ")
            print("Вот все ваши данные на этот момент: ")
            print("Массив: ", a)
            print("Пароль: ", key)
            print("Кол-во попыток при входе: ", k)

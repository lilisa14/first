from flask import Flask, render_template, redirect


app = Flask(__name__)


@app.route("/")
def main_route():
    return "Hello, World!"


@app.route("/html")
def html_route():
    return render_template('main.html')

@app.route('/ya')
def yandex_route():
    return redirect('https://yandex.ru/')

if __name__=="__main__":
    app.run(host="0.0.0.0", port=80, debug=True)

from friends import Friends

person1 = Friends("Джек", "25", "Красноярск", "рыжий", "карий", "баскетбол")
person2 = Friends("Карл", "20", "Москва", "чёрный", "голубой", "плавание")
person3 = Friends("Влад", "23", "Челябинск", "каштановый", "янтарный", "воллейбол")

choise = input("Введите имя вашего друга :")

if choise == "Джек":
    person1.info()
elif choise == "Карл":
    person2.info()
elif choise == "Влад":
    person3.info()
